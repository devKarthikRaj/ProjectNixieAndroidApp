<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="#263238" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="clip_vertical|center_vertical"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-29dp">

        <ImageButton
            android:id="@+id/Time_Mode_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_dotted_square"
            android:contentDescription="@string/time_mode_button_desc"
            android:src="@drawable/time_mode_logo"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/time_mode_button_display_text"
            android:textSize="25sp"
            android:fontFamily="@font/share_tech_mono"
            android:textColor="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/Date_Mode_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_dotted_square"
            android:contentDescription="@string/date_mode_button_desc"
            android:src="@drawable/date_mode_logo"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/date_mode_button_display_text"
            android:textSize="25sp"
            android:fontFamily="@font/share_tech_mono"
            android:textColor="@color/colorPrimary" />

        <ImageButton
            android:id="@+id/Countdown_Mode_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_dotted_square"
            android:contentDescription="@string/countdown_mode_button_desc"
            android:src="@drawable/countdown_mode_logo"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/countdown_mode_button_display_text"
            android:textSize="25sp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/share_tech_mono"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>